filters:
  and:
    - file.hasTag("reference/index")
formulas:
  Index: link(file, aliases[0])
  Group: aliases[0][0]
views:
  - type: list
    name: By Letter
    groupBy:
      property: formula.Group
      direction: ASC
    order:
      - formula.Index
    sort:
      - property: formula.Index
        direction: ASC
